<%- include("../layouts/admin_header.ejs") %>

<body>
    <section class="content-main">
        <div class="row">
            <div class="col-6">
                <div class="content-header">
                    <h2 class="content-title">Offer Listing</h2>
                </div>
            </div>
            <div class="col-6 text-end">
                <a href="/admin/offers/new" class="btn btn-primary">Add New Offer</a>
            </div>
        </div>
        
        <!-- Display success or error messages -->
        <% if (message) { %>
            <div class="<%= messageType === 'error' ? 'alert alert-danger' : 'alert alert-success' %>">
                <%= message %>
            </div>
        <% } %>

        <div class="row">
            <div class="col-lg-12">
                <div class="card mb-4">
                    <div class="card-body">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Offer Code</th>
                                    <th>Type</th>
                                    <th>Discount Type</th>
                                    <th>Discount Value</th>
                                    <th>Start Date</th>
                                    <th>End Date</th>
                                    <th>Usage Limit</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (offers.length > 0) { %>
                                    <% offers.forEach(offer => { %>
                                        <tr>
                                            <td><%= offer.code %></td>
                                            <td><%= offer.type %></td>
                                            <td><%= offer.discountType %></td>
                                            <td><%= offer.discountValue %></td>
                                            <td><%= new Date(offer.startDate).toLocaleDateString() %></td>
                                            <td><%= new Date(offer.endDate).toLocaleDateString() %></td>
                                            <td><%= offer.usageLimit %></td>
                                            <td>
                                                <!-- Edit button to redirect to the edit form for this offer -->
                                                <a href="/admin/offers/<%= offer._id %>/edit" class="btn btn-sm btn-warning">Edit</a>
                                                
                                                <!-- Optional: Add delete functionality -->
                                                <form action="/admin/offers/<%= offer._id %>" method="POST" style="display:inline;">
                                                    <input type="hidden" name="_method" value="DELETE">
                                                    <button class="btn btn-sm btn-danger" type="submit">Delete</button>
                                                </form>
                                            </td>
                                        </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="8" class="text-center">No offers available.</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <%- include("../layouts/admin_footer.ejs") %>
</body>

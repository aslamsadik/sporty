    <!-- Adjust the path as needed -->
    <style>
      body {
        font-family: "Arial", sans-serif;
        background-color: #f8f9fa;
        padding-top: 50px;
      }
      .container {
        max-width: 900px;
      }
      .error-message {
        color: red;
      }
      .address-card {
        border: 1px solid #ddd;
        border-radius: 10px;
        padding: 20px;
        margin-bottom: 15px;
        cursor: pointer;
        transition: all 0.3s ease;
        position: relative;
      }

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="user_assets/css/main.css?v=3.4">
    <title>Manage Addresses</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
        }

        .address-container {
            max-width: 800px;
            margin: 50px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .address-container h1 {
            text-align: center;
            margin-bottom: 30px;
            font-size: 28px;
            color: #333;
        }

        .address-item {
            padding: 20px;
            border: 1px solid #e0e0e0;
            border-radius: 8px;
            margin-bottom: 20px;
            position: relative;
            background-color: #f9f9f9;
        }

        .address-item p {
            margin: 0 0 10px;
            color: #555;
        }

        .address-buttons {
            position: absolute;
            right: 20px;
            top: 20px;
        }

        .edit-address-btn,
        .delete-address-btn {
            font-size: 14px;
            padding: 8px 12px;
            margin-left: 10px;
            cursor: pointer;
            border-radius: 4px;
            border: none;
            transition: background-color 0.3s;
        }

        .edit-address-btn {
            background-color: #007bff;
            color: white;
        }

        .edit-address-btn:hover {
            background-color: #0056b3;
        }

        .delete-address-btn {
            background-color: #dc3545;
            color: white;
        }

        .delete-address-btn:hover {
            background-color: #c82333;
        }

        .add-address-btn {
            font-size: 14px;
            padding: 10px 20px;
            background-color: #28a745;
            color: white;
            border: none;
            cursor: pointer;
            border-radius: 4px;
            display: block;
            margin: 20px auto 0;
            transition: background-color 0.3s;
        }

        .add-address-btn:hover {
            background-color: #218838;
        }

        .add-address-form {
            padding: 20px;
            background-color: #f9f9f9;
            border: 1px solid #e0e0e0;
            border-radius: 8px;
            margin-bottom: 30px;
        }

        .add-address-form input,
        .add-address-form button {
            width: calc(50% - 10px);
            padding: 10px;
            margin: 5px 0;
            font-size: 14px;
            border: 1px solid #ddd;
            border-radius: 4px;
            box-sizing: border-box;
        }

        .add-address-form input:focus,
        .add-address-form button:focus {
            outline: none;
            border-color: #007bff;
        }

        .add-address-form button {
            background-color: #007bff;
            color: white;
            border: none;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .add-address-form button:hover {
            background-color: #0056b3;
        }

        .add-address-form h2 {
            text-align: center;
            margin-bottom: 20px;
            font-size: 22px;
            color: #333;
        }
    </style>
</head>
<body>
    <div class="address-container">
        <h1>Manage Addresses</h1>
        <div>
            <% if (user && user.addresses && user.addresses.length > 0) { %>
                <% user.addresses.forEach(address => { %>
                    <div class="address-item">
                        <div class="address-details">
                            <p><strong><%= address.firstName %> <%= address.lastName %></strong></p>
                            <p><%= address.companyName %></p>
                            <p><%= address.address1 %>, <%= address.address2 %></p>
                            <p><%= address.city %>, <%= address.state %>, <%= address.zip %></p>
                            <p><%= address.phone %></p>
                            <p><%= address.email %></p>
                        </div>
                        <div class="address-buttons">
                            <button class="edit-address-btn" onclick="window.location.href='/profile/edit-address/<%= address._id %>'">Edit</button>
                            <button class="delete-address-btn" onclick="deleteAddress('<%= address._id %>')">Delete</button>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <p>No saved addresses found. Please add an address.</p>
            <% } %>
        </div>

        <div class="add-address-form">
            <h2>Add New Address</h2>
            <form action="/profile/add-address" method="POST">
                <input type="text" name="firstName" placeholder="First Name" required>
                <input type="text" name="lastName" placeholder="Last Name" required>
                <input type="text" name="companyName" placeholder="Company Name">
                <input type="text" name="address1" placeholder="Address Line 1" required>
                <input type="text" name="address2" placeholder="Address Line 2">
                <input type="text" name="city" placeholder="City" required>
                <input type="text" name="state" placeholder="State" required>
                <input type="text" name="zip" placeholder="Zip Code" required>
                <input type="text" name="phone" placeholder="Phone Number" required>
                <input type="email" name="email" placeholder="Email" required>
                <button type="submit">Add Address</button>
            </form>
        </div>
    </div>

    <script>
        function deleteAddress(addressId) {
            if (confirm('Are you sure you want to delete this address?')) {
                fetch(`/profile/delete-address/${addressId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                }).then(response => {
                    if (response.ok) {
                        window.location.reload();
                    } else {
                        alert('Failed to delete address.');
                    }
                });
            }
        }
    </script>
</body>
</html>

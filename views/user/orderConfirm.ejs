<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Order Confirmation</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
  <link rel="stylesheet" href="/user_assets/css/main.css"> <!-- Adjust the path as needed -->
  <style>
    body {
      font-family: 'Arial', sans-serif;
      background-color: #f8f9fa;
    }
    .card {
      border: none;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    .card-header {
      background-color: #007bff;
      color: white;
      border-radius: 10px 10px 0 0;
      text-align: center;
      padding: 20px;
    }
    .card-body {
      padding: 30px;
    }
    .list-group-item {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    .list-group-item span {
      font-weight: bold;
    }
    .return-link {
      text-align: center;
      margin-top: 20px;
    }
    .return-link a {
      color: #007bff;
      text-decoration: none;
      font-size: 18px;
    }
    .return-link a:hover {
      text-decoration: underline;
    }
    .btn-danger {
      background-color: #dc3545;
      border: none;
    }
    .btn-danger:hover {
      background-color: #c82333;
    }
  </style>
</head>
<body>
  <div class="container">
      <div class="row mt-5">
          <div class="col-md-8 offset-md-2">
              <div class="card">
                  <div class="card-header">
                      <h1>
                          <% if (orderDetails && orderDetails.status === 'Cancelled') { %>
                              Order Cancelled
                          <% } else { %>
                              Order Confirmation
                          <% } %>
                      </h1>
                  </div>
                  <div class="card-body">
                      <!-- Display success or error messages -->
                      <% if (message && messageType === 'success') { %>
                          <div class="alert alert-success">
                              <%= message %>
                          </div>
                      <% } else if (message && messageType === 'error') { %>
                          <div class="alert alert-danger">
                              <%= message %>
                          </div>
                      <% } %>

                      <!-- Order details section -->
                      <% if (orderDetails && orderDetails._id) { %>
                        <p class="card-text">Order ID: <span><%= orderDetails._id %></span></p>
                        <p class="card-text">Status: <span><%= orderDetails.status || 'Unknown' %></span></p>
                    
                        <!-- Handle cases where products might be undefined or empty -->
                        <h2>Products</h2>
                        <ul class="list-group">
                            <% if (orderDetails.products && orderDetails.products.length > 0) { %>
                                <% orderDetails.products.forEach(item => { %>
                                    <li class="list-group-item">
                                        <%= item.productId ? item.productId.name : 'Unknown Product' %> 
                                        - Quantity: <span><%= item.quantity %></span> 
                                        - Price: <span>₹<%= item.productId && item.productId.price ? item.productId.price.toFixed(2) : '0.00' %></span>
                                    </li>
                                <% }); %>
                            <% } else { %>
                                <li class="list-group-item">No products found.</li>
                            <% } %>
                        </ul>
                    
                        <p class="card-text mt-3">Subtotal: <span>₹<%= orderDetails.totalPrice ? (orderDetails.totalPrice + orderDetails.discountAmount).toFixed(2) : '0.00' %></span></p>
                        <p class="card-text">Discount Applied: <span>₹<%= orderDetails.discountAmount ? orderDetails.discountAmount.toFixed(2) : '0.00' %></span></p>
                        <p class="card-text">Total Amount after Discount: <span>₹<%= orderDetails.totalPrice ? orderDetails.totalPrice.toFixed(2) : '0.00' %></span></p>
                    
                        <h2>Shipping Address</h2>
                        <% if (orderDetails.shippingAddressId) { %>
                            <p class="card-text">
                                <%= orderDetails.shippingAddressId.addressLine1 %>, 
                                <%= orderDetails.shippingAddressId.city %>, 
                                <%= orderDetails.shippingAddressId.postalCode %>
                            </p>
                        <% } else { %>
                            <p class="card-text">Shipping address not available.</p>
                        <% } %>
                    <% } else { %>
                        <p class="card-text">No order details available.</p>
                    <% } %>
                    

                      <!-- Cancel order button for pending orders -->
                      <% if (orderDetails && orderDetails.status === 'Pending') { %>
                          <form action="/order/cancel/<%= orderDetails._id %>" method="POST">
                              <button type="submit" class="btn btn-danger mt-3">Cancel Order</button>
                          </form>
                      <% } %>
                  </div>
              </div>
          </div>
      </div>
  </div>
  <div class="return-link text-center mt-4">
      <a href="/" class="btn btn-secondary"><i class="fas fa-home"></i> Return to Home Page</a>
  </div>
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script src="/user_assets/js/main.js"></script> <!-- Adjust the path as needed -->
</body>
</html>

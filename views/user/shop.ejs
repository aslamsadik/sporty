
<link rel="stylesheet" href="user_assets/css/main.css?v=3.4">

<main class="main">
    <div class="page-header breadcrumb-wrap">
        <div class="container">
            <div class="breadcrumb">
                <a href="/home" rel="nofollow">Home</a>
                <span></span> Shop
            </div>
        </div>
    </div>
    <section class="mt-50 mb-50">
        <div class="container">
            <div class="row">
                <div class="col-lg-9">
                    <div class="shop-product-fillter">
                        <div class="totall-product">
                            <p> We found <strong class="text-brand"><%= totalProducts %></strong> items for you!</p>
                        </div>
                    </div>
                    <div class="row product-grid-3">
                        <% products.forEach(product => { %>
                            <div class="col-lg-4 col-md-4 col-12 col-sm-6">
                                <div class="product-cart-wrap mb-30">
                                    <div class="product-img-action-wrap">
                                        <div class="product-img product-img-zoom">
                                            <a href="/product/<%= product._id %>">
                                                <% if (product.images && product.images.length > 0) { %>
                                                    <img class="default-img" src="/user_assets/imgs/shop/<%= product.images[0] %>" alt="">
                                                    <% if (product.images.length > 1) { %>
                                                        <img class="hover-img" src="/user_assets/imgs/shop/<%= product.images[1] %>" alt="">
                                                    <% } %>
                                                <% } else { %>
                                                    <img class="default-img" src="/user_assets/imgs/shop/default-image.jpg" alt="">
                                                <% } %>
                                            </a>
                                        </div>
                                        <div class="product-action-1">
                                            <a aria-label="Quick view" class="action-btn hover-up" data-bs-toggle="modal" data-bs-target="#quickViewModal">
                                                <i class="fi-rs-search"></i>
                                            </a>
                                            <a aria-label="Add To Wishlist" class="action-btn hover-up" href="/shop-wishlist.html">
                                                <i class="fi-rs-heart"></i>
                                            </a>
                                            <a aria-label="Compare" class="action-btn hover-up" href="/shop-compare.html">
                                                <i class="fi-rs-shuffle"></i>
                                            </a>
                                        </div>
                                        <div class="product-badges product-badges-position product-badges-mrg">
                                            <span class="hot">Hot</span>
                                        </div>
                                    </div>
                                    <div class="product-content-wrap">
                                        <div class="product-category">
                                            <a href="/shop-grid-right.html"><%= product.category %></a>
                                        </div>
                                        <h2><a href="/product/<%= product._id %>"><%= product.name %></a></h2>
                                        <div class="rating-result" title="90%">
                                            <span>
                                                <span><%= product.rating || 0 %> Stars</span>
                                            </span>
                                        </div>
                                        <div class="product-price">
                                            <span>$<%= product.price %></span>
                                            <% if (product.oldPrice) { %>
                                                <span class="old-price">$<%= product.oldPrice %></span>
                                            <% } %>
                                        </div>
                                        <div class="product-action-1 show">
                                            <a aria-label="Add To Cart" class="action-btn hover-up" href="/shop-cart.html">
                                                <i class="fi-rs-shopping-bag-add"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                    <!--pagination-->
                    <div class="pagination-area mt-15 mb-30">
                        <nav aria-label="Page navigation">
                            <ul class="pagination justify-content-center">
                                <% if (currentPage > 1) { %>
                                    <li class="page-item">
                                        <a class="page-link" href="/shop?page=<%= currentPage - 1 %>&sort=<%= sort %>&minPrice=<%= minPrice %>&maxPrice=<%= maxPrice %>&categories=<%= selectedCategories.join(',') %>&brands=<%= selectedBrands.join(',') %>">&laquo; Previous</a>
                                    </li>
                                <% } %>
                                <% for (let i = 1; i <= totalPages; i++) { %>
                                    <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                        <a class="page-link" href="/shop?page=<%= i %>&sort=<%= sort %>&minPrice=<%= minPrice %>&maxPrice=<%= maxPrice %>&categories=<%= selectedCategories.join(',') %>&brands=<%= selectedBrands.join(',') %>"><%= i %></a>
                                    </li>
                                <% } %>
                                <% if (currentPage < totalPages) { %>
                                    <li class="page-item">
                                        <a class="page-link" href="/shop?page=<%= currentPage + 1 %>&sort=<%= sort %>&minPrice=<%= minPrice %>&maxPrice=<%= maxPrice %>&categories=<%= selectedCategories.join(',') %>&brands=<%= selectedBrands.join(',') %>">Next &raquo;</a>
                                    </li>
                                <% } %>
                            </ul>
                        </nav>
                    </div>                   
                </div>
                <div class="col-lg-3 primary-sidebar sticky-sidebar">
                    <div class="sidebar-widget mb-30">
                        <h5 class="section-title style-1 mb-30 wow fadeIn animated">Filters</h5>
                        <form id="filter-form" method="GET" action="/shop">
                            <!-- Filter By Price -->
                            <div class="sidebar-widget price_range range mb-20">
                                <label for="amount">Price Range:</label>
                                <input type="text" id="amount" name="price" placeholder="Add Your Price" class="form-control mb-10"/>
                                <input type="hidden" name="minPrice" value="<%= minPrice || 0 %>" />
                                <input type="hidden" name="maxPrice" value="<%= maxPrice || 1000 %>" />
                            </div>
                            <!-- Filter By Category -->
                            <div class="filter-by-category mb-20">
                                <label>Category:</label>
                                <% categories.forEach(cat => { %>
                                    <div class="form-check">
                                        <input type="checkbox" class="form-check-input" name="categories" value="<%= cat %>" <%= selectedCategories.includes(cat) ? 'checked' : '' %> />
                                        <label class="form-check-label"><%= cat %></label>
                                    </div>
                                <% }) %>
                            </div>
                            <!-- Filter By Brand -->
                            <div class="filter-by-brand mb-20">
                                <label>Brand:</label>
                                <% brands.forEach(brand => { %>
                                    <div class="form-check">
                                        <input type="checkbox" class="form-check-input" name="brands" value="<%= brand %>" <%= selectedBrands.includes(brand) ? 'checked' : '' %> />
                                        <label class="form-check-label"><%= brand %></label>
                                    </div>
                                <% }) %>
                            </div>
                            <button type="submit" class="btn btn-primary">Apply Filters</button>
                        </form>
                    </div>
                    <!-- Product sidebar Widget -->
                    <div class="sidebar-widget product-sidebar mb-30 p-30 bg-grey border-radius-10">
                        <div class="widget-header position-relative mb-20 pb-10">
                            <h5 class="widget-title mb-10">New products</h5>
                            <div class="bt-1 border-color-1"></div>
                        </div>
                        <div class="single-post clearfix">
                            <div class="image">
                                <img src="assets/imgs/shop/thumbnail-3.jpg" alt="#">
                            </div>
                            <div class="content pt-10">
                                <h5><a href="/shop-product-detail.html">Chen Cardigan</a></h5>
                                <p class="price mb-0 mt-5">$99.50</p>
                                <div class="product-rate">
                                    <div class="product-rating" style="width:90%"></div>
                                </div>
                            </div>
                        </div>
                        <div class="single-post clearfix">
                            <div class="image">
                                <img src="assets/imgs/shop/thumbnail-4.jpg" alt="#">
                            </div>
                            <div class="content pt-10">
                                <h6><a href="/shop-product-detail.html">Chen Sweater</a></h6>
                                <p class="price mb-0 mt-5">$89.50</p>
                                <div class="product-rate">
                                    <div class="product-rating" style="width:80%"></div>
                                </div>
                            </div>
                        </div>
                        <div class="single-post clearfix">
                            <div class="image">
                                <img src="assets/imgs/shop/thumbnail-5.jpg" alt="#">
                            </div>
                            <div class="content pt-10">
                                <h6><a href="/shop-product-detail.html">Colorful Jacket</a></h6>
                                <p class="price mb-0 mt-5">$25</p>
                                <div class="product-rate">
                                    <div class="product-rating" style="width:60%"></div>
                                </div>
                            </div>
                        </div>
                        <div class="single-post clearfix">
                            <div class="image">
                                <img src="assets/imgs/shop/thumbnail-6.jpg" alt="#">
                            </div>
                            <div class="content pt-10">
                                <h6><a href="/shop-product-detail.html">Lorem, ipsum</a></h6>
                                <p class="price mb-0 mt-5">$25</p>
                                <div class="product-rate">
                                    <div class="product-rating" style="width:60%"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--Banner-->
                    <div class="banner-img wow fadeIn mb-lg-0 animated d-lg-block d-none">
                        <img src="assets/imgs/banner/banner-11.png" alt="">
                        <div class="banner-text">
                            <span>Organic</span>
                            <h4>Save 17% <br>on <span class="text-brand">Organic</span><br>Juice</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>


<!-- Preloader Start -->
<div id="preloader-active">
    <div class="preloader d-flex align-items-center justify-content-center">
        <div class="preloader-inner position-relative">
            <div class="text-center">
                <h5 class="mb-5">Now Loading</h5>
                <div class="loader">
                    <div class="bar bar1"></div>
                    <div class="bar bar2"></div>
                    <div class="bar bar3"></div>
                </div>
            </div>
        </div>
    </div>
</div>
